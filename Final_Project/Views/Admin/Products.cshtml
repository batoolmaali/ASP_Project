@model Final_Project.ViewModels.ProductViewModel

@{
	Layout = "_AdminLayout";
}
@* <h1>All Products

</h1> *@

<div class="card p-4 bg-light">
    <form asp-controller="Admin" asp-action="Create" enctype="multipart/form-data">
        <h5>Add Products</h5>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group pb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="Text" class="form-control" placeholder="">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group pb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="Text" class="form-control" placeholder="">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group pb-3">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Cat ,"Id", "Name"))">
                <option>--Select Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group pb-3">
            <label asp-for="ImagePath"></label>
            <input asp-for="ImagePath" type="file" name="Image" class="form-control" placeholder="">
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
        <div class="form-group pb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}